<!-- Inserts all Mickkpewpew entities into the Scout screamer hordes - whenever the vanilla zombieFatCopRadiated would spawn -->
<insertAfter xpath="/entitygroups/entitygroup[contains(@name,'scoutHordeStage')]/entity[@name='zombieFatCopRadiated']">
	<entity name="zombieMutatedRadiatedBoss" prob="0.20"/>
	<entity name="zombieSpiderRadiatedBoss" prob="0.20"/>
	<entity name="zombieBurntFeralBoss" prob="0.20"/>
	<entity name="animalZombieVultureRadiatedBoss" prob="0.20"/>
	<entity name="animalZombieVultureRadiatedBossSnow" prob="0.20"/>
	<entity name="zombieLumberjackBossSnow" prob="0.20"/>
	<entity name="WraithRB" prob="0.20"/>
	<entity name="Lucifer" prob="0.20"/>
	<entity name="PyromaniacBoss" prob="0.20"/>
</insertAfter>

<!-- Inserts all Mickkpewpew entities into Bloodmoon horde - whenever the vanilla Demolition zombie would spawn -->
<insertAfter xpath="/entitygroups/entitygroup[contains(@name,'feralHordeStage')]/entity[@name='zombieDemolition']">
	<entity name="zombieMutatedRadiatedBoss" prob="0.30"/>
	<entity name="zombieSpiderRadiatedBoss" prob="0.30"/>
